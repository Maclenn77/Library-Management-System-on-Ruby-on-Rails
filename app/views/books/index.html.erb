<p id="notice"><%= notice %></p>

<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Author</th>
      <th>Title</th>
      <th>Publisher</th>
      <th>Publishing date</th>
      <th>Publishing country</th>
      <th>Topic</th>
      <th>Description</th>
      <th>Language</th>
      <th>Dewey classification</th>
      <th>Adquisition date</th>
      <th>Copies</th>
      <th>Availability</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.author %></td>
        <td><%= book.title %></td>
        <td><%= book.publisher %></td>
        <td><%= book.publishing_date %></td>
        <td><%= book.publishing_country %></td>
        <td><%= book.topic %></td>
        <td><%= book.description %></td>
        <td><%= book.language %></td>
        <td><%= book.dewey_classification %></td>
        <td><%= book.adquisition_date %></td>
        <td><%= book.copies %></td>
        <td><%= book.availability %></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

